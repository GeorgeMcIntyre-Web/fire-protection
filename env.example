# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# App Configuration
VITE_APP_NAME=Fire Protection Tracker
VITE_APP_VERSION=1.0.0

# Email Notifications (for Edge Functions/Workers)
# Choose one email service provider:
# Option 1: Resend (recommended - easy setup)
RESEND_API_KEY=re_your_key_here
# Option 2: SendGrid
# SENDGRID_API_KEY=SG.your_key_here

# Email sender address (must be verified with your email provider)
FROM_EMAIL=notifications@yourdomain.com

# Security secrets for notification functions
FUNCTION_SECRET=your-random-secret-for-supabase-edge-functions
WORKER_SECRET=your-random-secret-for-cloudflare-worker
